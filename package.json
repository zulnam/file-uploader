{
    "name": "frontify-frontend-task",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "nodemon -w src/server -x tsx src/server/main.ts",
        "start": "NODE_ENV=production tsx src/server/main.ts",
        "build": "vite build",
        "lint": "eslint --ext .ts,.tsx .",
